<% provide :title, "Home"%>


<% if logged_in? %>
  <div class="col-md-4 form_post">
    <%= render "shared/post_form", post: @post, catalog: @catalog %>
    <br/>
    <h5 class="card-header">Search</h5>
    <div class="card-body">
      <div class="input-group">
          <%= form_tag posts_path, method: :get do %>
          <%= text_field_tag 'term', params[:term], placeholder: "Enter user's name or surname", class: "form-control" %>
          <%= submit_tag 'Search!', class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4 col-md-offset-4">
   
  </div>
  <div class="col-md-8">
    <%= render "shared/feed", feed_item: @feed_items %>
  </div>
  <div class="col-md-8 col-md-offset-4">
    <%= render "shared/feed", feed_item: @feed_items_1 %>
  </div>
<% else %>
  <div class="col-md-8">
    <%= render "shared/feed", feed_item: @new_feed %>
  </div>
<% end %>


