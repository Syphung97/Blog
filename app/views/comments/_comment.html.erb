<li style="padding-top: 15px", id="<%=comment.id%>">
<div class="media mb-4">
  <%= gravatar_for comment.author, size: 50 %>
  <h5 class="mt-0"><%= comment.author.name %></h5>
  <div class="media-body" style="display: inline">
    <p><%= comment.content%></p>
    Commented <%= time_ago_in_words(comment.created_at) %> ago
    <% if comment.author.current_author? current_author or @post.author.current_author? current_author %>
      <%= link_to "Delete", post_comment_url(@post,comment), method: :delete , remote: true%>
    <% end %>
    
  </div>
</div>
</li>
