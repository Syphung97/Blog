<% user ||= current_author %>
<div class="stats">
  <%= link_to followings_path user do %>
    <strong id="following" class="stat">
      <%= user.following.count %>
    </strong>
    <%= "following" %>
  <% end %>
  <%= link_to followers_path user do %>
    <strong id="followers" class="stat">
      <%= user.followers.count %>
    </strong>
    <%= "followers" %>
  <% end %>
</div>
